@if (Request.IsAuthenticated) {
    <text>
        <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text">Hello, @User.Identity.Name!</li>
            <li>
                <a href="/Account/SignOut"><span class="glyphicon glyphicon-log-out"></span> Sign out</a>
                    @*@Html.ActionLink("Sign out", "SignOut", "Account")*@
                    @*<a asp-controller="Account" asp-action="SignOut"><span class="glyphicon glyphicon-log-out"></span> Sign out</a>*@
            </li>
        </ul>
    </text>
} else {
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="/Account/SignIn" id="loginLink"><span class="glyphicon glyphicon-user"></span> Sign in</a>
            </li>

            @*<li>@Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
            @*<li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>*@
            @*<li><a asp-controller="Account" asp-action="SignIn"><span class="glyphicon glyphicon-log-out"></span> Login</a></li>*@
        </ul>
}
