<div class="row" style="color:black;">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Books</h1>
            </div>
            <div class="panel-body">
                <table id="books-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%"></table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        var bookListVM;
        $(function () {
            bookListVM = {
                dt: null,
                init: function () {
                    dt = $('#books-data-table').DataTable({
                        "serverSide": true,
                        "processing": true,
                        "ajax": {
                            "url":
                            "@Url.Action("Get","Books")"
                        },
                        "columns": [
                            { "title": "AlphaSort", "data": "AlphaSort", "searchable": true },
                            { "title": "Title", "data": "Title", "searchable": true },
                            { "title": "Author", "data": "Author", "searchable": true },
                            { "title": "Media", "data": "MediaFormat", "searchable": true },
                            { "title": "ISBN", "data": "IBSN", "searchable": true },
                            { "title": "Location", "data": "Location.Name", "searchable": true }
                        ],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                    });
                }
            }
            // initialize the datatables
            bookListVM.init();
        });
    </script>
}